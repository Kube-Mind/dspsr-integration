{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "dependencyDashboard": true,
  "labels": [
    "dependencies"
  ],
  "helm-values": {
    "managerFilePatterns": ["**/values.yaml"]
  },
  "packageRules": [
    {
      "matchManagers": [
        "dockerfile",
        "regex"
      ],
      "groupName": "chore(deps): update submodules"
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": ["submodules.json"],
      "matchStrings": [
        "\"[^\"]+\"\\s*:\\s*\\{[\\s\\S]*?\"url\"\\s*:\\s*\"(?<depName>https://git\\.code\\.sf\\.net/p/[^\"]+/code)\"[\\s\\S]*?\"tag\"\\s*:\\s*\"(?<currentValue>[^\"]+)\""
      ],
      "datasourceTemplate": "git-refs",
      "versioningTemplate": "loose"
    }
  ]
}

{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "mergeConfidence:all-badges"
  ],
  "dependencyDashboard": true,
  "labels": [
    "dependencies"
  ],
  "enabledManagers": [
    "dockerfile",
    "custom.regex"
  ],
  "packageRules": [
    {
      "matchManagers": [
        "dockerfile",
        "custom.regex"
      ],
      "matchDatasources": ["git-refs"],
      "groupName": "chore(deps): update oci and submodules",
      "groupSlug": "oci-submodules",
      "matchUpdateTypes": ["major", "minor", "patch", "digest"]
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "submodules.json"
      ],
      "matchStrings": [
        "\"[^\"]+\"\\s*:\\s*\\{[\\s\\S]*?\"url\"\\s*:\\s*\"(?<depName>https://git\\.code\\.sf\\.net/p/[^\"]+/code)\"[\\s\\S]*?\"tag\"\\s*:\\s*\"(?<currentValue>[^\"]+)\""
      ],
      "datasourceTemplate": "git-refs",
      "versioningTemplate": "loose"
    }
  ]
}

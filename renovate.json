{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "dependencyDashboard": true,
  "labels": [
    "dependencies"
  ],
  "helm-values": {
    "managerFilePatterns": ["**/values.yaml"]
  },
  "packageRules": [
    {
      "matchManagers": [
        "dockerfile",
        "regex"
      ],
      "groupName": "chore(deps): update submodules"
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": ["submodules.json"],
      "matchStrings": [
        "\"(?<depName>[^\"]+)\"\\s*:\\s*\\{[^}]*?\"url\"\\s*:\\s*\"(?<registryUrl>https?://[^\"]+)\"[^}]*?\"tag\"\\s*:\\s*\"(?<currentValue>[^\"]+)\""
      ],
      "depNameTemplate": "{{depName}}",
      "datasourceTemplate": "git-tags",
      "registryUrlTemplate": "{{registryUrl}}"
    }
  ]
}
